<resources>
    <!-- Base application theme. -->
    <style name="Theme.CantinappMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CantinappMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="defaultCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardBackgroundColor">@color/primaryLightColor</item>
    </style>

    <style name="classBalls">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="classFilterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="background">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="productCardTitle">
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <style name="productCardDescription">
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>
    
    <style name="dayCardTitle">
        <item name="android:textColor">@color/descriptionTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dayCardClass">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="searchCard">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColorHint">#00A87D</item>
    </style>

    <style name="imageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="minHeight">48dp</item>
        <item name="minWidth">48dp</item>
    </style>

    <style name="closeButton">
        <item name="backgroundTint">#00A87D</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cantinappBackground">
        <item name="android:background">#00A87D</item>
    </style>

    <style name="Theme.CantinappMobile.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CantinappMobile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>